<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke
                android:width="1dp"
                android:color="@color/moa_carrot_700" />
            <solid android:color="@color/moa_carrot_700" />
            <padding
                android:bottom="6dp"
                android:left="11dp"
                android:right="11dp"
                android:top="6dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke
                android:width="1dp"
                android:color="#dfdfdf" />
            <padding
                android:bottom="6dp"
                android:left="11dp"
                android:right="11dp"
                android:top="6dp" />
        </shape>
    </item>
</selector>