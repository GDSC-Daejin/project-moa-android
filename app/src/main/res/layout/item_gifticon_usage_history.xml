<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp">

    <View
        android:id="@+id/view_background"
        android:layout_width="188dp"
        android:layout_height="71dp"
        android:background="@drawable/background_gifticon_usage_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_user_profile_image"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/background_share_room_item"
        android:clipToOutline="true"
        android:src="@drawable/asset_gifticon_coffee"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@id/view_background" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="사용자"
        android:textColor="@color/moa_gray_400"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_user_profile_image"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile_image" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="Jade"
        android:textColor="@color/moa_gray_900"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_user"
        app:layout_constraintTop_toBottomOf="@id/tv_user" />

    <TextView
        android:id="@+id/tv_used_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="3,500원"
        android:textColor="@color/moa_gray_900"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background" />

</androidx.constraintlayout.widget.ConstraintLayout>