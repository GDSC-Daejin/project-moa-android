<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:background="@drawable/post_round_drawable"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/used_coupon_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/used_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="스타벅스"
                android:textColor="@color/moa_gray_400"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/used_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="아이스 아메리카노"
                android:textColor="@color/moa_gray_800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/used_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="11dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="사용자 | 김송하"
                android:textColor="@color/moa_gray_800"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/used_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:visibility="visible"
                android:fontFamily="@font/pretendard_medium"
                android:text="사용금액 | 0"
                android:textColor="@color/moa_gray_800"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/used_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="16분 전"
                android:textColor="@color/moa_gray_400"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>